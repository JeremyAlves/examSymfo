{% extends 'base.html.twig' %}

{% block title %}Liste des pays{% endblock %}

{% block body %}

<div class="text-center my-3">
<h1>Liste des pays</h1>
</div>

<table class="table mt-5">
    <thead>
        <tr>
            <th class="text-center">#</th>
            <th class="text-center">Pays</th>
            <th class="text-center">Informations</th>
            <th class="text-center"> Total de Contaminé</th>
            <th class="text-center"> Total de Guéris</th>
            <th class="text-center"> Total de Zombifiés</th>
        </tr>
    </thead>
    <tbody>
    {% for country in countrys %}
        <tr>
            <td class="text-center">{{ country.id }}</td>
            <td class="text-center">{{ country.name }}</td>
            <td class="text-center"><a href="{{path("country_show", { 'country' : country.id })}}"><i class="fa fa-eye" aria-hidden="true"></i></a></td>
            <td class="text-center">{{ country.Contaminated }}</td>
            {% if country.Healed > country.Zombified %}
            <td class="text-center" style="background-color: rgb(12, 211, 12);">{{ country.Healed }}</td>
            {% else %}
            <td class="text-center" style="background-color: rgb(240, 37, 37);">{{ country.Healed }}</td>
            {% endif %}
            <td class="text-center">{{ country.Zombified }}</td>
        </tr>
    {% else %}
        <tr>
            <td colspan="3">Pas de pays enregistrés</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<div>

</div>

{% endblock %}
